    "nativescript-toast": "1.4.6",
    "nativescript-ui-sidedrawer": "4.3.1",
    "nativescript-vue": "2.0.2",
    "nativescript-vue-devtools": "1.1.0",
    "tns-core-modules": "5.0.1",
    "vuex": "3.0.1"
  },
  "devDependencies": {
    "@babel/core": "7.1.2",
    "@babel/preset-env": "7.1.0",
